@page "/Pomodoro"
<h3 class="text-center">Pomodoro</h3>

<div class="container border w-50 p-2 size">
    @if (!StartBtnPressed)
    {
        <p class="text-danger">@ErrorMessage</p>

        <label>Sesijas ilgums:</label>
        <input type="number" class="form-control mb-2"  @bind ="InputMinutes" />
       
            <div class="d-flex align-items-baseline gap-2">
                <div class="flex-fill">
                    <label>īsā pauze:</label>
                    <input type="number"class="form-control"  @bind="InputPauseMinutes" />
                </div>
                <div class="flex-fill">
                    <label>Garās pauze:</label>
                    <input type="number" class="form-control"   @bind="InputLongPauseMinutes" />
                </div>
                <div class="flex-fill">
                    <label>Sesijas:</label>
                    <input type="number" class="form-control"  @bind="InputSessionAmount" />
                </div
                    
            </div
            <label >Garā pauze pēc [] sesijas:</label>
            <input type="number" class="form-control mb-2"  @bind="InputSessionLongPause" />
    }
    else
        {
        @if(IsPause)
        {
            <p>Pauzes laiks (～￣▽￣)～</p>
        }   
            <p>Sesija @CurrSession/@InputSessionAmount</p>
            <p>Atlikušais laiks: @DisplayTime</p>
        }

        <div class="d-flex justify-content-center">
            @if (!StartBtnPressed) 
            {
                <button class="btn btn-primary me-2" @onclick="SetTimer">Sākt</button>
            }
            else
            {
                <button class="btn btn-secondary me-2" @onclick="ResetTimer">Pārtraukt</button>
                 @if (!StopBtnPressed)
                {
                    <button class="btn me-2 btn-danger" @onclick="StopTimer"><i class="bi bi-pause-fill"></i></button>

                }
                else
                {
                <button class="btn btn-success me-2" @onclick="ContinueTimer"><i class="bi bi-play-fill"></i></button>
                }
            }

          
        </div>
</div>
